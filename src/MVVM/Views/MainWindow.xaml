<Window
    x:Class="LogViewer.MVVM.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:LogViewer.Helpers"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:localization="clr-namespace:LogViewer.Localization"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:threeView="clr-namespace:LogViewer.MVVM.TreeView"
    xmlns:viewModels="clr-namespace:LogViewer.MVVM.ViewModels"
    Width="900"
    Height="700"
    AllowsTransparency="True"
    Background="White"
    Loaded="MainWindow_OnLoaded"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:LogViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <HierarchicalDataTemplate DataType="{x:Type threeView:Node}" ItemsSource="{Binding Children}">
                <StackPanel Orientation="Horizontal" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                    <CheckBox
                        x:Name="TreeViewCheckBox"
                        Uid="{Binding Id}"
                        Command="{Binding Path=DataContext.TreeViewElementCheckCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                        IsChecked="{Binding IsChecked}"
                        PreviewKeyDown="TreeViewCheckBox_OnPreviewKeyDown"
                        PreviewMouseLeftButtonDown="TreeViewCheckBox_OnPreviewMouseLeftButtonDown" />
                    <helpers:SearchableTextControl
                        Background="{Binding ToggleMark}"
                        IsHighlight="True"
                        IsMatchCase="False"
                        SearchText="{Binding DataContext.LoggerHighlightText, RelativeSource={RelativeSource AncestorType=Window}}"
                        Text="{Binding Text}">
                        <helpers:SearchableTextControl.ToolTip>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="65" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Top"
                                    FontWeight="Bold"
                                    Text="{localization:LocBinding Name,
                                                                   StringFormat={}{0}:}" />
                                <TextBlock
                                    Grid.Row="1"
                                    FontWeight="Bold"
                                    Text="{localization:LocBinding Source,
                                                                   StringFormat={}{0}:}" />

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    VerticalAlignment="Top"
                                    Text="{Binding Text}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Text="{Binding Source}" />
                            </Grid>
                        </helpers:SearchableTextControl.ToolTip>
                    </helpers:SearchableTextControl>
                    <StackPanel.ContextMenu>
                        <ContextMenu Style="{StaticResource BaseContextMenu}">
                            <MenuItem
                                Margin="0"
                                Command="{Binding PlacementTarget.Tag.CollapseChildrenCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding CollapseAll}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource CollapseImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                Margin="0"
                                Command="{Binding PlacementTarget.Tag.ExpandChildrenCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding ExpandAll}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource ExpandImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <Separator />

                            <MenuItem
                                Command="{Binding PlacementTarget.Tag.ShowOnlyThisLoggerCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding ShowOnlyThisLogger}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource EyeImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                Command="{Binding PlacementTarget.Tag.DontReceiveThisLoggerCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding DontReceiveThisLogger}"
                                ToolTip="{localization:LocBinding DontReceiveThisLoggerToolTip}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource StopImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                Command="{Binding PlacementTarget.Tag.IgnoreThisIPCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding AddCurrentIPtoIgnoreList}"
                                ToolTip="{localization:LocBinding AddCurrentIPtoIgnoreListToolTip}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource IgnoreIPStopImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                Command="{Binding PlacementTarget.Tag.ToggleMarkCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding ToggleMarking}"
                                ToolTip="{localization:LocBinding ToggleMarkingToolTip}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource MarkDrawingImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <Separator />

                            <MenuItem
                                Margin="0"
                                Command="{Binding PlacementTarget.Tag.ClearChildrenCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding Clear}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource CleanImage}" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <Separator />

                            <MenuItem
                                Margin="0"
                                Command="{Binding PlacementTarget.Tag.ExportCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                CommandParameter="{Binding}"
                                Header="{localization:LocBinding ExportCurrentLoggerToFile}">
                                <MenuItem.Icon>
                                    <Image Source="{StaticResource ExportDrawingImage}" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </StackPanel.ContextMenu>
                </StackPanel>
            </HierarchicalDataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo
            Description="Log Viewer"
            ProgressState="{Binding Path=IsShowTaskbarProgress, Converter={StaticResource ProgressStateConverter}}"
            ProgressValue="{Binding Path=TaskBarFileLoadProgress}">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo
                    Command="{Binding StartCommand}"
                    Description="{localization:LocBinding Start}"
                    ImageSource="{StaticResource PlayWhiteImage}"
                    IsEnabled="{Binding StartIsEnabled}" />
                <ThumbButtonInfo
                    Command="{Binding PauseCommand}"
                    Description="{localization:LocBinding Pause}"
                    ImageSource="{StaticResource PauseWhiteImage}"
                    IsEnabled="{Binding PauseIsEnabled}" />
                <ThumbButtonInfo
                    Command="{Binding CleanCommand}"
                    Description="{localization:LocBinding ClearAllLogs}"
                    ImageSource="{StaticResource CleanWhiteTaskBarImage}"
                    IsEnabled="{Binding CleanIsEnabled}" />
                <ThumbButtonInfo
                    Command="{Binding ImportCommand}"
                    Description="{localization:LocBinding ImportLogsToolTip}"
                    ImageSource="{StaticResource ImportWhiteDrawingImage}" />
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>

    <Window.InputBindings>
        <KeyBinding
            Key="F"
            Command="{Binding Path=SearchLogCommand}"
            CommandParameter="{StaticResource False}"
            Modifiers="Control" />
        <KeyBinding
            Key="F"
            Command="{Binding Path=SearchLogCommand}"
            CommandParameter="{StaticResource True}"
            Modifiers="Control+Shift" />
        <KeyBinding
            Key="F"
            Command="{Binding Path=FindNextCommand}"
            Modifiers="Shift" />
        <KeyBinding
            Key="D"
            Command="{Binding Path=FindPreviousCommand}"
            Modifiers="Shift" />
        <KeyBinding
            Key="R"
            Command="{Binding Path=ClearSearchResultCommand}"
            Modifiers="Shift" />
        <KeyBinding
            Key="S"
            Command="{Binding Path=ExportCommand}"
            Modifiers="Control" />
        <KeyBinding
            Key="R"
            Command="{Binding Path=CleanCommand}"
            Modifiers="Control" />
        <KeyBinding
            Key="T"
            Command="{Binding Path=GoToTimestampCommand}"
            Modifiers="Control" />
        <KeyBinding
            Key="T"
            Command="{Binding Path=SetTimeIntervalCommand}"
            Modifiers="Control+Shift" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition Height="0.95*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" MouseLeftButtonDown="DockPanel_MouseLeftButtonDown">
            <TextBlock
                Margin="10,0,0,0"
                DockPanel.Dock="Left"
                Text="日志查看工具 baseOn  https://github.com/Styort/LogViewer@Styort ,modified by xinchenglei@shZYT" />
            <WrapPanel
                Margin="0,0,5,0"
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">

                <Button Click="OnPinBtnClicked">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Kind="Pin" />
                </Button>
                <Button Click="OnWindowMinimizeBtnClicked">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Kind="WindowMinimize" />
                </Button>



                <Button Click="OnWindowMaximizeBtnClicked">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Kind="WindowMaximize" />
                </Button>
                <Button Click="OnWindowCloseBtnClicked">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Kind="WindowClose" />
                </Button>

                <WrapPanel.Resources>
                    <Style BasedOn="{StaticResource MaterialDesignIconForegroundButton}" TargetType="Button">
                        <Setter Property="Margin" Value="4,0,4,0" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Width" Value="30" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />

                    </Style>
                </WrapPanel.Resources>
            </WrapPanel>
        </DockPanel>

        <Grid Grid.Row="1">
            <materialDesign:DrawerHost
                x:Name="DrawerHost"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=1}}"
                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=1}}"
                Margin="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BottomDrawerBackground="{DynamicResource SecondaryHueLightBrush}">
                <materialDesign:DrawerHost.Style>
                    <Style BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}" TargetType="materialDesign:DrawerHost" />
                </materialDesign:DrawerHost.Style>

                <materialDesign:DrawerHost.RightDrawerContent>


                    <Grid
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Margin="10,5"
                            HorizontalAlignment="Left"
                            FontSize="14"
                            Text="{localization:LocBinding Loggers}" />

                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="0,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Height="33"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                CornerRadius="2">
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="BorderBrush" Value="Gray" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFocused, ElementName=SearchLoggerTextBox}" Value="True">
                                                <Setter Property="BorderBrush" Value="{Binding IconColor}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        x:Name="SearchLoggerTextBox"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        materialDesign:HintAssist.Hint="{localization:LocBinding Search}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                        BorderThickness="0"
                                        Text="{Binding Path=SearchLoggerText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Return" Command="{Binding Path=SearchLoggersCommand}" />
                                        </TextBox.InputBindings>
                                    </TextBox>

                                    <Button
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,3,0"
                                        Padding="0"
                                        Command="{Binding Path=ClearSearchLoggerResultCommand}"
                                        ToolTip="{localization:LocBinding ClearFindLoggersResultToolTip}"
                                        Visibility="{Binding Path=IsEnableClearSearchLoggers, Converter={StaticResource BooleanToVisibility}}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Grid x:Name="RootGrid">
                                                    <Image Cursor="Hand" Source="{StaticResource CancelDrawingImage}" />
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="RootGrid" Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>

                            <Button
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="5,0,0,0"
                                Padding="2"
                                Command="{Binding Path=SearchLoggersCommand}"
                                ToolTip="{localization:LocBinding FindLoggersToolTip}">
                                <Image Source="{StaticResource SearchDrawingImage}" />
                                <Button.Style>
                                    <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="{x:Type Button}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchLoggerTextBox, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                                <Setter Property="IsEnabled" Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <Button
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Width="120"
                            HorizontalAlignment="Left"
                            Command="{Binding Path=CollapseLoggersCommand}"
                            Content="{localization:LocBinding CollapseAll}"
                            Style="{StaticResource BaseButtonStyle}" />
                        <Button
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Width="120"
                            HorizontalAlignment="Right"
                            Command="{Binding Path=ClearLoggersCommand}"
                            Content="{localization:LocBinding ClearAll}"
                            Style="{StaticResource BaseButtonStyle}" />

                        <TreeView
                            x:Name="LoggersTreeView"
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            MaxHeight="900"
                            IsEnabled="{Binding Path=IsEnableLogList}"
                            ItemsSource="{Binding Path=Loggers}"
                            VirtualizingStackPanel.IsVirtualizing="True"
                            VirtualizingStackPanel.VirtualizationMode="Recycling">
                            <i:Interaction.Behaviors>
                                <helpers:BindableSelectedItemBehavior SelectedItem="{Binding SelectedNode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </i:Interaction.Behaviors>
                        </TreeView>
                    </Grid>

                </materialDesign:DrawerHost.RightDrawerContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.60*" />
                        <RowDefinition Height="0.3*" />

                    </Grid.RowDefinitions>

                    <Border
                        Margin="1"
                        BorderBrush="Gray"
                        BorderThickness="3">
                        <Grid Grid.ColumnSpan="3" Margin="5">
                            <StackPanel
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <Button Command="{Binding Path=ImportCommand}" Style="{StaticResource ImportButtonStyle}" />
                                <Button Command="{Binding Path=ExportCommand}" Style="{StaticResource ExportButtonStyle}" />
                            </StackPanel>

                            <StackPanel
                                Grid.ColumnSpan="3"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <Button Style="{StaticResource StartPauseNetworkReceiverButtonStyle}" />
                                <Button Style="{StaticResource StartPauseFileReceiverButtonStyle}" Visibility="{Binding Path=FileWatchers.Count, Converter={StaticResource CountToVisibilityConverter}}" />
                                <Button Click="OnScrollToTopButtonClick" Style="{StaticResource ScrollToTop}" />
                                <Button
                                    x:Name="AutoScrollButton"
                                    Click="OnAutoScrollToBottomButtonClick"
                                    Style="{StaticResource AutoScrollToBottom}" />
                                <Button Click="OnScrollToBottomButtonClick" Style="{StaticResource ScrollToBottom}" />

                                <Button
                                    Background="LightGray"
                                    Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                                    CommandParameter="{x:Static Dock.Right}"
                                    Style="{StaticResource MaterialDesignIconForegroundButton}">

                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="FileTree" />
                                </Button>
                            </StackPanel>



                            <Button Command="{Binding Path=OpenSettingsCommand}" Style="{StaticResource SettingsButtonStyle}" />

                        </Grid>
                    </Border>


                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="1"
                        BorderBrush="Gray"
                        BorderThickness="3">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.1*" />
                                <RowDefinition Height="0.9*" />
                            </Grid.RowDefinitions>

                            <StackPanel
                                Grid.Row="0"
                                Margin="1"
                                Orientation="Horizontal">
                                <TextBlock
                                    x:Name="contentTB"
                                    Margin="7,0,0,0"
                                    VerticalAlignment="Center"
                                    FontWeight="DemiBold"
                                    Foreground="Gray"
                                    Text="{localization:LocBinding Message}" />

                                <Border
                                    Width="200"
                                    Height="33"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right"
                                    CornerRadius="2">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="BorderBrush" Value="Gray" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFocused, ElementName=SearchTextBox}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{Binding IconColor}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            x:Name="SearchTextBox"
                                            Margin="5,0,5,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalContentAlignment="Center"
                                            materialDesign:HintAssist.Hint="{localization:LocBinding Search}"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                            BorderThickness="0"
                                            Text="{Binding Path=SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                            <TextBox.InputBindings>
                                                <KeyBinding
                                                    Key="Return"
                                                    Command="{Binding ElementName=LogsListView, Path=DataContext.SearchLogCommand}"
                                                    CommandParameter="{StaticResource False}" />
                                            </TextBox.InputBindings>
                                        </TextBox>

                                        <Button
                                            Grid.Column="1"
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,3,0"
                                            Padding="0"
                                            Command="{Binding ElementName=LogsListView, Path=DataContext.ClearSearchResultCommand}"
                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
                                            ToolTip="{localization:LocBinding ClearSearchAndSearchResult}"
                                            Visibility="{Binding ElementName=LogsListView, Path=DataContext.ClearSearchResultIsEnabled, Converter={StaticResource BooleanToVisibility}}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Grid x:Name="RootGrid">
                                                        <Image Cursor="Hand" Source="{StaticResource CancelDrawingImage}" />
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="RootGrid" Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0"
                                    Padding="2"
                                    Command="{Binding ElementName=LogsListView, Path=DataContext.SearchLogCommand}"
                                    CommandParameter="{StaticResource False}"
                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
                                    ToolTip="{localization:LocBinding FindAllHotKeys}">

                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="Magnify" />

                                    <Button.ContextMenu>
                                        <ContextMenu Style="{StaticResource BaseContextMenu}">
                                            <MenuItem
                                                Margin="0"
                                                Command="{Binding PlacementTarget.Tag.SearchLogCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContextMenu}}"
                                                CommandParameter="{StaticResource True}"
                                                Header="{localization:LocBinding InAnotherWindowHotKeys}" />
                                        </ContextMenu>
                                    </Button.ContextMenu>

                                    <Button.Style>
                                        <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="{x:Type Button}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=SearchTextBox, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="0"
                                    Padding="2"
                                    Command="{Binding ElementName=LogsListView, Path=DataContext.FindPreviousCommand}"
                                    IsEnabled="{Binding ElementName=LogsListView, Path=DataContext.IsEnableFindPrevious}"
                                    ToolTip="{localization:LocBinding FindPreviousLogMessageToolTip}">
                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="ArrowLeftThinCircleOutline" />
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0"
                                    Padding="2"
                                    Command="{Binding ElementName=LogsListView, Path=DataContext.FindNextCommand}"
                                    ToolTip="{localization:LocBinding FindNextLogMessageToolTip}">
                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="ArrowRightThinCircleOutline" />
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="{x:Type Button}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=SearchTextBox, UpdateSourceTrigger=PropertyChanged}" Value="0">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="0"
                                    Padding="2"
                                    Command="{Binding ElementName=LogsListView, Path=DataContext.CleanCommand}"
                                    IsEnabled="{Binding ElementName=LogsListView, Path=DataContext.CleanIsEnabled}"
                                    ToolTip="{localization:LocBinding ClearAllLogsToolTip}">
                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Kind="Broom" />
                                </Button>

                                <ToggleButton
                                    Margin="5,0"
                                    IsChecked="{Binding ElementName=LogsListView, Path=DataContext.IsMatchCase}"
                                    ToolTip="{localization:LocBinding MatchCase}">
                                    <ToggleButton.Template>
                                        <ControlTemplate>
                                            <Border
                                                x:Name="toggleBorder"
                                                Width="33"
                                                Height="33"
                                                BorderBrush="DeepSkyBlue"
                                                BorderThickness="0">
                                                <Image Margin="1" Source="{StaticResource MatchCaseImage}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="ToggleButton.IsChecked" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="BorderThickness" Value="2" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ToggleButton
                                    Margin="0"
                                    IsChecked="{Binding ElementName=LogsListView, Path=DataContext.IsMatchWholeWord}"
                                    ToolTip="{localization:LocBinding MatchWholeWord}">
                                    <ToggleButton.Template>
                                        <ControlTemplate>
                                            <Border
                                                x:Name="toggleBorder"
                                                Height="33"
                                                BorderBrush="DeepSkyBlue"
                                                BorderThickness="0">
                                                <Image Margin="2" Source="{StaticResource MatchWordDrawingImage}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="ToggleButton.IsChecked" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="BorderThickness" Value="2" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ToggleButton
                                    Margin="5,0"
                                    IsChecked="{Binding ElementName=LogsListView, Path=DataContext.IsMatchLogLevel}"
                                    ToolTip="{localization:LocBinding MatchLogLevel}">
                                    <ToggleButton.Template>
                                        <ControlTemplate>
                                            <Border
                                                x:Name="toggleBorder"
                                                Height="33"
                                                BorderBrush="DeepSkyBlue"
                                                BorderThickness="0">
                                                <Image Margin="2" Source="{StaticResource MatchLogLevelImage}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="ToggleButton.IsChecked" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="BorderThickness" Value="2" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ToggleButton
                                    Margin="5,0"
                                    IsChecked="{Binding ElementName=LogsListView, Path=DataContext.UseRegularExpressions}"
                                    ToolTip="{localization:LocBinding UseRegularExpression}">
                                    <ToggleButton.Template>
                                        <ControlTemplate>
                                            <Border
                                                x:Name="toggleBorder"
                                                Height="33"
                                                BorderBrush="DeepSkyBlue"
                                                BorderThickness="0">
                                                <Image Margin="0" Source="{StaticResource RegularExpressionsImage}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="ToggleButton.IsChecked" Value="True">
                                                    <Setter TargetName="toggleBorder" Property="BorderThickness" Value="2" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </StackPanel>


                            <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                                <DataGrid
                                    x:Name="LogsListView"
                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=1}}"
                                    AllowDrop="True"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    DragOver="LogsListView_OnDragOver"
                                    Drop="LogsListView_OnDrop"
                                    IsEnabled="{Binding Path=IsEnableLogList}"
                                    ItemsSource="{Binding Path=Logs, IsAsync=True}"
                                    RowStyle="{StaticResource LogRowStyle}"
                                    ScrollViewer.CanContentScroll="True"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    SelectedValue="{Binding Path=SelectedLog}"
                                    SelectionChanged="OnSelectionChanged"
                                    VirtualizingPanel.IsVirtualizing="True"
                                    VirtualizingPanel.VirtualizationMode="Recycling">

                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Width="0.03*" Header="">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ContentControl
                                                        Width="{Binding DataContext.ColorReceiverColumnWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        Content="{Binding}"
                                                        ContentTemplate="{StaticResource ReceiverColorColumnDataTemplate}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Width="0.1*" Header="Log Level">
                                            <DataGridTemplateColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource LogLevelImageHeaderTemplate}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.HeaderTemplate>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource LogLevelImagesDataTemplate}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTextColumn
                                            Width="Auto"
                                            Binding="{Binding Time, Converter={StaticResource DataConverter}}"
                                            Header="{localization:LocBinding Time}"
                                            IsReadOnly="True" />

                                        <DataGridTextColumn
                                            Width="0.1*"
                                            Binding="{Binding Thread}"
                                            Header="{localization:LocBinding Thread}"
                                            IsReadOnly="True" />

                                        <DataGridTextColumn
                                            Width="{Binding SourceColumnWidth}"
                                            Binding="{Binding Address}"
                                            Header="{localization:LocBinding Source}"
                                            IsReadOnly="True" />

                                        <DataGridTextColumn
                                            Width="0.1*"
                                            Binding="{Binding Logger, Converter={StaticResource LoggerDisplayConverter}}"
                                            Header="{localization:LocBinding Logger}"
                                            IsReadOnly="True" />

                                        <DataGridTemplateColumn Width="0.2*" Header="{localization:LocBinding Message}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource LogMessageDataTemplate}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>

                                    <DataGrid.InputBindings>
                                        <KeyBinding
                                            Key="W"
                                            Command="{Binding Path=FindNextWarningCommand}"
                                            Modifiers="Control" />
                                        <KeyBinding
                                            Key="E"
                                            Command="{Binding Path=FindNextErrorCommand}"
                                            Modifiers="Control" />
                                    </DataGrid.InputBindings>
                                </DataGrid>
                            </Grid>
                        </Grid>

                    </Border>


                    <ProgressBar
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}"
                        Visibility="{Binding Path=IsVisibleLoader, Converter={StaticResource BooleanToVisibility}}" />

                    <ProgressBar
                        Grid.Row="1"
                        Grid.Column="0"
                        Height="10"
                        VerticalAlignment="Bottom"
                        Maximum="100"
                        Visibility="{Binding IsVisibleProcessBar, Converter={StaticResource BooleanToVisibility}}"
                        Value="{Binding ProcessBarValue}" />


                    <Border
                        Grid.Row="3"
                        BorderBrush="Gray"
                        BorderThickness="3">


                        <Grid Margin="10,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="60" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontSize="14"
                                Text="{localization:LocBinding Message,
                                                               StringFormat={}{0}:}" />
                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                Width="70"
                                Margin="0,5"
                                VerticalAlignment="Bottom"
                                Command="{Binding Path=CopyMessageCommand}"
                                Style="{StaticResource BaseButtonStyle}"
                                ToolTip="{localization:LocBinding Copy}">
                                <Image Source="{StaticResource CopyDrawingImage}" />
                            </Button>
                            <TextBox
                                x:Name="LoggerTextBox"
                                Grid.Row="0"
                                Grid.Column="1"
                                Height="Auto"
                                Margin="10,0"
                                Padding="5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Top"
                                Background="White"
                                BorderThickness="1"
                                FontSize="14"
                                IsReadOnly="True"
                                Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
                                Text="{Binding Path=SelectedLog.Message}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />

                            <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="20,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{localization:LocBinding Logger,
                                                                   StringFormat={}{0}:}" />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="23,0,10,0"
                                    Padding="5,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="White"
                                    BorderThickness="1"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Text="{Binding Path=SelectedLog.Logger}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{localization:LocBinding Time,
                                                                   StringFormat={}{0}:}" />
                                <TextBox
                                    Grid.Column="3"
                                    Width="180"
                                    Margin="10,0"
                                    Padding="5,0"
                                    HorizontalAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    Background="White"
                                    BorderThickness="1"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Text="{Binding Path=SelectedLog.Time, StringFormat={}{0:dd/MM/yyyy HH:mm:ss.fff}}" />

                                <TextBlock
                                    Grid.Column="4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{localization:LocBinding Thread,
                                                                   StringFormat={}{0}:}" />
                                <TextBox
                                    Grid.Column="5"
                                    Width="80"
                                    Margin="10,0"
                                    Padding="5,0"
                                    HorizontalAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    Background="White"
                                    BorderThickness="1"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Text="{Binding Path=SelectedLog.Thread}" />

                                <TextBlock
                                    Grid.Column="6"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{localization:LocBinding Port,
                                                                   StringFormat={}{0}:}" />
                                <TextBox
                                    Grid.Column="7"
                                    Margin="10,0,0,0"
                                    Padding="5,0"
                                    HorizontalAlignment="Right"
                                    VerticalContentAlignment="Center"
                                    Background="White"
                                    BorderThickness="1"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Text="{Binding Path=SelectedLog.Receiver.Port}" />


                            </Grid>
                            <Grid.Resources>
                                <Style BasedOn="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" TargetType="TextBox">
                                    <Setter Property="FontSize" Value="15" />
                                    <Setter Property="MaxHeight" Value="40" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="MinWidth" Value="50" />
                                </Style>
                            </Grid.Resources>
                        </Grid>

                    </Border>

                </Grid>
            </materialDesign:DrawerHost>
        </Grid>
    </Grid>

</Window>


